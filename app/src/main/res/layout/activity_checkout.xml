<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Street Address"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/radioGroupPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbSadaPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay via SadaPay"
                android:textSize="16sp"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbEasyPaisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay via EasyPaisa"
                android:textSize="16sp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tvCheckoutTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: PKR 0.0"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Confirm &amp; Pay"
            android:backgroundTint="#5D4037"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>