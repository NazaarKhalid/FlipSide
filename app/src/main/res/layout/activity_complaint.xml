<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    android:padding="24dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_revert"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support Center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#5D4037"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <TextView
        android:id="@+id/tvSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Describe your issue below. Our smart assistant will try to help immediately."
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"/>

    <EditText
        android:id="@+id/etComplaintMsg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Type your complaint here... (e.g. 'I forgot my password' or 'Refund needed')"
        android:gravity="top"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubHeader"/>

    <Button
        android:id="@+id/btnSubmitComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Complaint"
        android:backgroundTint="#5D4037"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etComplaintMsg"/>

    <TextView
        android:id="@+id/tvStatusResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="#EFEBE9"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnSubmitComplaint"/>

</androidx.constraintlayout.widget.ConstraintLayout>